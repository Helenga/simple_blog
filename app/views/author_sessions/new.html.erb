<h1>Log in</h1>
<%= form_tag author_sessions_path, method: :post do %>
	<div class='field'>
		<%= label_tag :email %>
		<%= email_field_tag :email %>
		<br>
	</div>
	<div class='field'>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
		<br>
	</div>
	<div class='action'>
		<%= submit_tag "Log in" %>
	</div>
<% end %>

<%= link_to 'Back', articles_path %>
