<%= form_for(@article, html: {multipart: true}) do |f| %>

<% if @article.errors.any? %>
	<div class='error_explanation'>
		<%= pluralize(@article.errors.count, 'error') %> prohibited the article from being saved:
		<ul>
			<% @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<p>
	<%= f.label :tag_list %><br>
	<%= f.text_field :tag_list %>
</p>

<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :text %><br>
	<%= f.text_area :text %>
</p>
<p>
	<%= f.label :image, 'Attach an image' %><br>
	<%= f.file_field :image %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>
